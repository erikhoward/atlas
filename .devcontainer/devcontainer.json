{
	"name": "Rust Dev Container",
	"build": {
		"dockerfile": "Dockerfile"
	},
	// Configure tool-specific properties.
	"customizations": {
		"vscode": {
			"settings": {
				"files.watcherExclude": {
					"**/target/**": true
				},
				"editor.formatOnSave": true,
				"terminal.integrated.defaultProfile.linux": "bash"
			},
			"extensions": [
				"rust-lang.rust-analyzer",
				"vadimcn.vscode-lldb",
				"labs.dependi",
				"tamasfe.even-better-toml"
			]
		}
	},
	// Required for debuggers like CodeLLDB that use ptrace
	// This allows the debugger to attach to processes in the container.
	"runArgs": [
		"--cap-add=SYS_PTRACE",
		"--security-opt",
		"seccomp=unconfined"
	],
	"postCreateCommand": "cargo check",
	"remoteUser": "vscode"
}